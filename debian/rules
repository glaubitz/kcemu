#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3

configure: configure-stamp
configure-stamp:
	dh_testdir
	./configure \
		--prefix=/usr \
		--mandir=\$${prefix}/share/man \
		--infodir=\$${prefix}/share/info \
		--enable-libsndfile=no \
		--enable-libaudiofile=no \
		--enable-libmp3lame=no \
		--enable-libvorbis=no \
		--enable-libflac=no

	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir

	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) install prefix=$(CURDIR)/debian/kcemu/usr \
			exec_prefix=$(CURDIR)/debian/kcemu/usr/X11R6 \
			mandir=$(CURDIR)/debian/kcemu/usr/X11R6/man
	mkdir -p $(CURDIR)/debian/kcemu/usr/share/pixmaps
	cp $(CURDIR)/images/*.xpm $(CURDIR)/debian/kcemu/usr/share/pixmaps/

# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs --noscripts
	dh_installmenu
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress usr/share/KCemu/microdos.dump \
		    usr/share/KCemu/a5105sys.dump \
		    usr/share/KCemu/tools.dump \
		    usr/share/KCemu/caos.dump \
		    usr/share/KCemu/cpmz9.dump \
		    usr/share/KCemu/z1013cpm.dump \
		    usr/share/KCemu/z1013gdc.dump
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
